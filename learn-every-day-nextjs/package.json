{
  "name": "learn-every-day-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "export APP_GLOBAL_CONFIG=$(cat config/global-config.local.json) && next dev --turbopack",
    "build": "next build && npm run db:setup",
    "start": "next start",
    "lint": "next lint",
    "db:setup-local": "export APP_GLOBAL_CONFIG=$(cat config/global-config.local.json) && nmp run db:setup",
    "db:setup": "ts-node --project scripts/tsconfig.json scripts/setup-database.ts",
    "db:reset": "export APP_GLOBAL_CONFIG=$(cat config/global-config.local.json) && ts-node --project scripts/tsconfig.json scripts/setup-database.ts reset",
    "db:setup-v2": "export APP_GLOBAL_CONFIG=$(cat config/global-config.local.json) && ts-node --project scripts/tsconfig.json scripts/setup-database-v2.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@types/commander": "^2.12.0",
    "@types/dinero.js": "^1.9.4",
    "@types/moment": "^2.11.29",
    "@types/nedb": "^1.8.16",
    "@types/nodemailer": "^6.4.17",
    "@types/sqlite3": "^3.1.11",
    "@vercel/postgres": "^0.10.0",
    "commander": "^14.0.0",
    "dinero.js": "^1.9.1",
    "dotenv": "^16.5.0",
    "google-auth-library": "^9.15.1",
    "google-spreadsheet": "^4.1.4",
    "moment": "^2.30.1",
    "nedb": "^1.8.0",
    "next": "15.3.4",
    "node-cron": "^4.1.1",
    "node-gyp": "^11.2.0",
    "nodemailer": "^7.0.3",
    "openai": "^5.3.0",
    "papa": "^0.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
